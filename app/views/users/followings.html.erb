<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section class="btn_details">
            <%= button_to "microposts", user_path, method: :get ,class: "btn btn-default" %>
            <%= button_to "followings", followings_user_path, method: :get ,class: "btn btn-default disabled"%>
            <%= button_to "followers", followers_user_path, method: :get ,class: "btn btn-default"%>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @followings.any? %>
            <h3>following users (<%= @followings.count %>)</h3>
            <div class="row">
                <% @followings.each do |following| %>
                    <%= render partial: 'users/followings_list', locals: { following: following } %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>