<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
        <section class="btn_details">
            <%= button_to "microposts", user_path, method: :get ,class: "btn btn-default disabled" %>
            <%= button_to "followings", followings_user_path, method: :get ,class: "btn btn-default"%>
            <%= button_to "followers", followers_user_path, method: :get ,class: "btn btn-default"%>
        </section>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>